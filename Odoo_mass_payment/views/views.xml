<odoo>
  <data>
    <record id="view_mass_payment_form" model="ir.ui.view">
        <field name="name">mass.payment.form</field>
        <field name="model">mass.payment</field>
        <field name="arch" type="xml">
            <form string="Mass Payment">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="payment_date"/>
                        <field name="payment_method_id"/>
                        <field name="journal_id"/>
                        <field name="payment_type"/>
                    </group>
                    <group>
                        <field name="invoice_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="payment_ids" readonly="1">
                            <tree>
                                <field name="partner_id"/>
                                <field name="amount"/>
                                <field name="payment_date"/>
                                <field name="journal_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="action_open_payment_wizard" type="object" string="Add Payment" class="btn-primary"/>
                    <button name="action_process_payments" type="object" string="Process Payments" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Vista del wizard mass.payment.wizard -->
    <record id="view_mass_payment_wizard_form" model="ir.ui.view">
        <field name="name">mass.payment.wizard.form</field>
        <field name="model">mass.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Payment">
                <group>
                    <field name="payment_type" readonly="1"/>
                    <field name="partner_id"/>
                    <field name="amount"/>
                    <field name="currency_id"/>
                    <field name="payment_date"/>
                    <field name="journal_id"/>
                    <field name="payment_method_id"/>
                </group>
                <footer>
                    <button name="action_create_payment" type="object" string="Create Payment" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n de ventana para el wizard -->
    <record id="action_mass_payment_wizard" model="ir.actions.act_window">
        <field name="name">Create Payment</field>
        <field name="res_model">mass.payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
  </data>
</odoo>