<odoo>
    <record id="view_mass_payment_form" model="ir.ui.view">
        <field name="name">mass.payment.form</field>
        <field name="model">mass.payment</field>
        <field name="arch" type="xml">
            <form string="Mass Payment">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="payment_date"/>
                        <field name="payment_method_id"/>
                        <field name="journal_id"/>
                        <field name="payment_type"/>
                    </group>
                    <group>
                        <field name="invoice_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="payment_ids" readonly="1">
                            <tree>
                                <field name="partner_id"/>
                                <field name="amount"/>
                                <field name="payment_date"/>
                                <field name="journal_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="action_open_payment_wizard" type="object" string="Add Payment" class="btn-primary"/>
                    <button name="action_process_payments" type="object" string="Process Payments" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mass_payment" model="ir.actions.act_window">
        <field name="name">Mass Payments</field>
        <field name="res_model">mass.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Mass Payment
            </p>
        </field>
    </record>

    <menuitem id="menu_mass_payment" name="Mass Payments" parent="account.menu_finance_payables" action="action_mass_payment"/>
</odoo>